<h1>Editer la Catégorie</h1>
<%= form_with model: [:admin, @category], local: true do |f| %>
  <div class="field">
    <%= f.label :name, "Nom de la catégorie" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
  </div>
<% end %>
