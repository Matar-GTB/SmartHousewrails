<!-- app/views/static_pages/home.html.erb -->

<div class="home-overlay fade-in">
  <h1 class="mb-4 text-center">Bienvenue sur SmartHouse</h1>
  <p class="lead text-center">SmartHouse est une plateforme web de maison intelligente qui vous aide à gérer vos objets connectés.</p>

  <!-- Carousel -->
  <div id="tourCarousel" class="carousel slide my-4" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <h5>Gestion des objets connectés</h5>
        <p>Ajoutez et gérez vos appareils IoT facilement depuis l’application.</p>
      </div>
      <div class="carousel-item">
        <h5>Visualisation des données</h5>
        <p>Consultez en temps réel l’état de vos capteurs et consommations.</p>
      </div>
      <div class="carousel-item">
        <h5>Gagnez des points</h5>
        <p>Progressez de Simple à Expert en interagissant avec la plateforme.</p>
      </div>
    </div>
  </div>

  <!-- Formulaire de recherche -->
  <h3>Rechercher un objet connecté</h3>
  <%= form_with url: devices_path, method: :get, local: true do |f| %>
    <div class="row mb-3">
      <div class="col-md-4">
        <%= label_tag :name_query, "Nom de l’objet" %>
        <%= text_field_tag :name_query, params[:name_query], class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= label_tag :desc_query, "Description contient" %>
        <%= text_field_tag :desc_query, params[:desc_query], class: "form-control" %>
      </div>
      <div class="col-md-4">
        <%= label_tag :category, "Catégorie" %>
        <%= select_tag :category, options_from_collection_for_select(Category.all, :id, :name, params[:category]), include_blank: "- Toutes -", class: "form-select" %>
      </div>
    </div>
    <%= f.submit "Rechercher", class: "btn btn-primary" %>
  <% end %>
</div>
