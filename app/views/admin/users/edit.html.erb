
<h2>Modifier l’utilisateur <%= @user.email %></h2>
<%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :points, "Points accumulés" %>
    <%= f.number_field :points, class: "form-control" %>
  </div>
  <div class="mb-3 form-check">
    <%= f.check_box :admin, class: "form-check-input" %>
    <%= f.label :admin, "Droits administrateur", class: "form-check-label" %>
  </div>
  <%= f.submit "Enregistrer", class: "btn btn-primary" %>
<% end %>
