            </div>
            <div class="col-md-4">
                <%= f.text_field :value, class: "form-control", placeholder: "Valeur" %>
            </div>
            <div class="col-md-2">
                <%= f.submit "Modifier", class: "btn btn-sm btn-primary" %>
              <% end %>
            </div>
            <div class="col-md-2">
  <%= button_to "Supprimer", device_device_datum_path(@device, data), 
