<h2>Créer un compte</h2>

<%= form_with model: resource, url: registration_path(resource_name), local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="mb-3">
    <%= f.label :first_name, "Prénom" %>
    <%= f.text_field :first_name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :last_name, "Nom" %>
    <%= f.text_field :last_name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :username, "Nom d'utilisateur" %>
    <%= f.text_field :username, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :age, "Âge" %>
    <%= f.number_field :age, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :gender, "Genre" %>
    <%= f.select :gender, ["Homme", "Femme", "Autre"], prompt: "Sélectionner", class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :birthdate, "Date de naissance" %>
    <%= f.date_select :birthdate, start_year: Date.today.year - 100, end_year: Date.today.year, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :member_type, "Rôle dans la maison" %>
    <%= f.text_field :member_type, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :email %>
    <%= f.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
  </div>

  <%= f.submit "S'inscrire", class: "btn btn-primary" %>
<% end %>
